
#!/bin/bash

cd 'C:/git/hlathenav2/hlathena/'

### Test run settings for trainer .py
hits='./data/model_training/hits_95.txt'
decoys='./data/model_training/decoys.txt'
allele=A0202
pep_col=seq
folds=3
lr=0.01
dr=0.1
epochs=10
batch_size=128
prediction_replicates=100
decoy_mul=1
aa_folder='./data/model_training/featurestest'
# exp_col='logTPMab'
# cdn_cols='up_freq;pep_freq;dn_freq'
# up_dn_cols='up_freq;dn_freq'
# up_col='up_freq'
# pep_f_col='pep_freq'
# dn_col='dn_freq'
exp_and_cdn_cols='logTPMab;up_freq;dn_freq;up_mu;dn_mu'
featset='./data/model_training/basic_features.txt'
reps=2

out='./data/model_training/output/test5'


python3 ./trainer.py \
    --hits $hits \
    --decoys $decoys \
    --allele $allele \
    --pep_column $pep_col \
    -kf $folds -e $epochs -lr $lr -dr $dr -b $batch_size \
    -pr $prediction_replicates -dm $decoy_mul \
    --feat_sets $featset --repetitions $reps \
    -o $out --run_name 'test5'